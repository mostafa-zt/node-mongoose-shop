<%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/navigation.ejs') %>
    <main>
        <div class="container">
            <% if (products.length>0) { %>
            <div class="row">
                <% for (let product of products) { %>
                <div class="col col-md col-sm">
                    <div class="box" id="<%= product._id %>">
                        <img src="<%= product.productImageUrl %>">
                        <div class="box-content">
                            <div class="prod__label productTitle"><%= product.productTitle %></div>
                            <div class="prod__label productPrice"><%= product.productPrice %></div>
                            <div class="prod__label"><%= product.productAuthor %></div>
                            <div class="prod__label"><%= product.productDescription %></div>
                        </div>
                        <div class="actions__section">
                            <a href="/admin/edit-product/<%= product._id %>/" class="button button-success">Edit
                                Product</a>
                            <a data-val='<%= product._id %>' class="button button-cancel removeProduct__Btn">Remove
                                Product</a>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
            <% } else {%>
            <h1>There is no PRODUCTS!</h1>
            <% } %>
        </div>
    </main>
</body>

</html>