<%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/navigation.ejs') %>
    <main>
        <div class="container">
            <div class="order_list">
                <h1> Orders... </h1>
                <div class="box__section order_section">
                    <div class="box__section_header order trackingNumber bold">#<%= order.orderTrackingNumber %> <a href="/invoice/<%= order._id %>" >Download Invoice</a></div>
                    <div class="order"> <label>Address :</label> <%= order.orderName %></div>
                    <div class="order"> <label>Address : </label> <%= order.orderAddress %></div>
                    <div class="order"> <label>Phone Number : </label> <%= order.orderPhone %></div>
                    <div class="order order__price bold"> <label>Order Price :</label> $<%= order.orderPrice %></div>
                    <% order.orderItems.forEach(orderItem =>{ %>
                            <div class="box__section_item">
                                <div class="order_item bold"><label>Product Title :</label> <%= orderItem.product.productTitle %></div>
                                <div class="order_item"><label>Product Description :</label> <%= orderItem.product.productDescription %></div>
                                <div class="order_item"><label>Product Price :</label> $<%= orderItem.product.productPrice %></div>
                                <div class="order_item quantity"><label>Product QTY :</label> <%= orderItem.quantity %></div>
                                <div class="order_item totalPrice"><label></label> $<%= orderItem.totalPrice %></div>
                                <div class="order_item image"><img src="<%= orderItem.product.productImageUrl %>" width="50" height="60"></div>
                            </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </main>
</body>

</html>